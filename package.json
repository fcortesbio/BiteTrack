{
  "name": "bitetrack-monorepo",
  "version": "2.0.0",
  "private": true,
  "description": "BiteTrack - Enterprise Business Intelligence Platform for Food Businesses",
  "keywords": [
    "food-business",
    "business-intelligence",
    "inventory-management",
    "pos-system",
    "monorepo"
  ],
  "homepage": "https://github.com/fcortesbio/BiteTrack#readme",
  "bugs": {
    "url": "https://github.com/fcortesbio/BiteTrack/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fcortesbio/BiteTrack.git"
  },
  "license": "MIT",
  "author": "fcortesbio",
  "workspaces": [
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "start": "npm run start --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "clean": "rm -rf node_modules services/*/node_modules packages/*/node_modules",
    "init": "bash infrastructure/scripts/init.sh",
    "docker:up": "docker compose -f infrastructure/docker-compose.yml up -d",
    "docker:down": "docker compose -f infrastructure/docker-compose.yml down",
    "docker:logs": "docker compose -f infrastructure/docker-compose.yml logs -f",
    "docker:clean": "docker compose -f infrastructure/docker-compose.yml down -v && docker system prune -f",
    "postinstall": "echo 'âœ… All workspaces installed successfully'"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "prettier": "^3.6.2"
  }
}
