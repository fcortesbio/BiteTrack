{
  "name": "bitetrack",
  "version": "1.0.0",
  "description": "RESTful API for small food businesses to manage sellers, products, customers, and sales",
  "keywords": [
    "api",
    "food",
    "business",
    "express",
    "mongodb"
  ],
  "homepage": "https://github.com/fcortesbio/BiteTrack#readme",
  "bugs": {
    "url": "https://github.com/fcortesbio/BiteTrack/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fcortesbio/BiteTrack.git"
  },
  "license": "MIT",
  "author": "fcortesbio",
  "type": "commonjs",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "node -r dotenv/config index.js dotenv_config_path=.env.development",
    "dev:watch": "nodemon -r dotenv/config index.js dotenv_config_path=.env.development",
    "start:production": "NODE_ENV=production node index.js",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "test:verbose": "cross-env NODE_ENV=test jest --verbose"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.1",
    "morgan": "^1.10.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@faker-js/faker": "^10.0.0",
    "cross-env": "^10.0.0",
    "jest": "^30.1.3",
    "mongodb-memory-server": "^10.2.1",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "models/**/*.js",
      "middleware/**/*.js",
      "routes/**/*.js",
      "utils/**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testTimeout": 30000
  }
}
