{
  "watch": [
    "controllers/",
    "models/",
    "routes/",
    "middleware/",
    "utils/",
    "config/",
    "index.js",
    ".env.development"
  ],
  "ext": "js,json,yaml,yml",
  "ignore": [
    "node_modules/",
    "coverage/",
    "test-data/",
    "docs/",
    "*.log",
    "*.md",
    "test-customer-validation.md"
  ],
  "delay": 1000,
  "env": {
    "NODE_ENV": "development"
  },
  "colours": true,
  "legacyWatch": false,
  "verbose": false,
  "quiet": false,
  "events": {
    "start": "echo 'ðŸ”§ Starting BiteTrack development server...'",
    "restart": "echo 'ðŸ”„ Restarting due to file changes...'",
    "crash": "echo 'ðŸ’¥ Server crashed - fix the error and save a file to restart'"
  }
}
