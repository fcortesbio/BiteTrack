# BiteTrack Non-Interactive Setup Environment Variables
# Copy this file and modify the values, then source it before running the init script

# MongoDB Configuration
export BITETRACK_MONGO_USER="bitetrack-admin"
export BITETRACK_MONGO_PASSWORD="YourSecurePassword123"
export BITETRACK_MONGO_DB="bitetrack"

# JWT Configuration (will auto-generate if not set)
# export BITETRACK_JWT_SECRET="your-custom-jwt-secret"
export BITETRACK_JWT_EXPIRATION="7d"

# Frontend Configuration
export BITETRACK_FRONTEND_URLS="http://localhost:3000,http://localhost:4173"
export BITETRACK_APP_PORT="3000"
export BITETRACK_LOG_LEVEL="info"

# SuperAdmin Configuration
export BITETRACK_ADMIN_EMAIL="admin@bitetrack.com"
export BITETRACK_ADMIN_PASSWORD="AdminPassword123"
export BITETRACK_ADMIN_FIRST_NAME="John"
export BITETRACK_ADMIN_LAST_NAME="Doe"
export BITETRACK_ADMIN_DOB="1990-01-01"

# Cleanup option: 1=BiteTrack only, 2=Complete, 3=Skip
export BITETRACK_CLEANUP_OPTION="1"